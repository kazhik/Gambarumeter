<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/listitem_background"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heartrate_timestamp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:56:22"
            android:textSize="16dp"
            android:textColor="@color/text" />
        <TextView
            android:id="@+id/heartrate_value"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16dp"
            android:textColor="@color/text" />
        <TextView
            android:id="@+id/heartrate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bpm"
            android:textSize="16dp"
            android:textColor="@color/text" />
        <TextView
            android:id="@+id/stepcount_value"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16dp"
            android:textColor="@color/text" />
        <TextView
            android:id="@+id/stepcount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps_per_min"
            android:textSize="16dp"
            android:textColor="@color/text" />
    </LinearLayout>
</LinearLayout>
